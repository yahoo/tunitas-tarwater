              loa << call("000", &Fixture::test_load_000)
                  << call("00", &Fixture::test_load_00)
                  << call("01", &Fixture::test_load_01)
                  << call("02", &Fixture::test_load_02)
                ;
              return move(loa);
            }()
    ;
  return finalize(series);
}
